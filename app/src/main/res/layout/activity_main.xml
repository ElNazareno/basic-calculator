<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pinkieeee"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/textos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="320dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#3E0032"
            android:text="pinkie calculadora"/>

        <EditText
            android:id="@+id/txtNumero1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:hint="Numero 1"

            android:inputType="numberDecimal"
            android:textSize="16dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/txtNumero2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:hint="Numero 2"
            android:inputType="numberDecimal"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/texto"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSuma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:backgroundTint="#C602C0"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                app:cornerRadius="15dp"
                android:text="+"/>
            <Button
                android:id="@+id/btnResta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:backgroundTint="#C330BF"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                app:cornerRadius="15dp"
                android:text="-"/>
            <Button
                android:id="@+id/btnMultiplicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                app:cornerRadius="15dp"
                android:backgroundTint="#C330AC"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:text="*"/>
            <Button
                android:id="@+id/btnDivision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:backgroundTint="#DC46C5"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                app:cornerRadius="15dp"
                android:text="/"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnLimpiar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cornerRadius="20dp"
            android:text="limpiar"
            android:backgroundTint="#D900FF"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp">
            <TextView
                android:id="@+id/txtResultado"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="none"
                android:textSize="20dp"
                android:textColor="#4C2144"
                android:textStyle="bold"
                android:text="El resultado es:"/>
        </LinearLayout>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>